│   ├── visualize_pca_components.py  # Step 5: Visualize PCA components
│   ├── check_variance.py            # Step 6: Check the variance explained by each principal component
│   ├── cluster_kmeans.py            # Step 7: Clustering with K-means
│   ├── classify_logistic.py         # Step 8: Classification with logistic regression
│   ├── visualize_2d_pca.py          # Step 9: 2D visualization the PCA-reduced data
│   ├── visualize_tsne.py            # Step 10: Using t-SNE for visualization
│   ├── visualize_umap.py            # Step 11: Using UMAP for visualization
